{
  "fmt": {
    "files": {
      "exclude": [
        ".cache",
        ".github",
        ".vscode",
        ".gitignore",
        "deno.json",
        "lock.json",
        "README.md"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        ".cache"
      ]
    }
  },
  "tasks": {
    "cache": "deno cache --lock-write deps.ts",
    "cache-reload": "deno cache --reload deps.ts",
    "start": "deno run main.ts",
    "test": "deno test -A --unstable"
  }
}